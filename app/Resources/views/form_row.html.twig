{% block form_errors %}
{% spaceless %}
    {% if errors|length > 0 %}
    {% for error in errors %}
        {{ error.messageTemplate|trans(error.messageParameters, 'validators') }}<br>
    {% endfor %}
    {% endif %}
{% endspaceless %}
{% endblock form_errors %}

{% block form_row %}
{% set label_attr = { 'class' : 'col-lg-3 control-label'}|merge(label_attr) %}
{% set widget_attr = {'class' : 'form-control'}|merge(attr) %}
<div class="form-group{% if form.vars.errors is not empty %} has-error{% endif %}">
    {{ form_label(form, null, {"label_attr":label_attr }) }}
    <div class="col-lg-7">
        {{ form_widget(form, { "attr" : widget_attr }) }}
        <span class="help-block">
            {{ form_errors(form, { "attr" : {'class' : 'form-control'} }) }}
        </span>
    </div>
</div>
{% endblock form_row%}

